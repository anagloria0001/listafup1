#include <stdlib.h>
#include <stdio.h>

#define N 10

int a = 2, b = 5, c  = 8, d = 3;
int conta_pares;
// -- escreva seu código abaixo, não altere esta linha



int main() {
    conta_pares=0;
    if(a%2 == 0){conta_pares = conta_pares + 1;}
    if(b%2 == 0){conta_pares = conta_pares + 1;}
    if(c%2 == 0){conta_pares = conta_pares + 1;}
    if(d%2 == 0){conta_pares = conta_pares + 1;}
    
    printf("%d\n", conta_pares);

}
